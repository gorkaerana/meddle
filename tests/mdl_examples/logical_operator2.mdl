RECREATE Picklist IF NOT EXISTS my_picklist__c (
   label('My Picklist'),
   active(true),
   can_add_values(true),
   can_reorder_values(true),
   Picklistentry my_first_entry__c(
     value('Entry 1'),
     order(1),
     active(true)
  ),
  Picklistentry my_second_entry__c(
     value('Entry 2'),
     order(2),
     active(true)
  )
);